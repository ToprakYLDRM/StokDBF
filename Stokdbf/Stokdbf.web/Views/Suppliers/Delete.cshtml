@model Stokdbf.data.Models.Supplier

@{
    ViewData["Title"] = "Tedarikçi Sil";
}

<div class="container mt-4">
    <h2 class="text-danger mb-3">@ViewData["Title"]</h2>

    <div class="alert alert-warning">
        <p>Bu tedarikçiyi silmek istediğinize emin misiniz?</p>
        <hr />
        <p><strong>Ad:</strong> @Model.Name</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Telefon:</strong> @Model.Phone</p>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger">Sil</button>
            <a asp-action="Index" class="btn btn-secondary">İptal</a>
        </div>
    </form>
</div>
